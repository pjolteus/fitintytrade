# ───────────────────────────────
# 🌐 FitintyTrade .env.example
# Do NOT put secrets in here. This is public.
# ───────────────────────────────

# App Mode (DEV, PROD, DOCKER, RAILWAY)
MODE=

# Enable test mode for CI/CD
IS_TESTING=false

# PostgreSQL database connection
DATABASE_URL=

# JWT Auth
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=

# Redis / Celery (background tasks)
REDIS_URL=
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# Model Path
LSTM_MODEL_PATH=models/lstm_model.pth

# Optional: SMTP for email alerts
SMTP_SERVER=
SMTP_PORT=
EMAIL_FROM=
EMAIL_PASSWORD=

# Optional: Dev team alert emails
ALERT_EMAIL=
DEV_EMAIL=

# Broker API Keys (Optional)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
OANDA_API_KEY=
OANDA_ACCOUNT_ID=
FXCM_API_TOKEN=
FXCM_ACCOUNT_ID=
IBR_USERNAME=
IBR_PASSWORD=
IBR_ACCOUNT_ID=
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

